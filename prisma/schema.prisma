generator client {
  provider      = "prisma-client-js"
  // 'native' for local, 'rhel...' for Netlify functions, 'debian...' for Netlify build container
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique    // Fixed: Added String type here
  role         Role       @default(USER)
  createdAt    DateTime   @default(now())
  
  // Relations
  businesses   Business[]
  givenVouches Vouch[]
}

enum TrustTier {
  UNVERIFIED
  BRONZE
  SILVER
  GOLD
}

model Business {
  id              String         @id @default(uuid())
  name            String
  description     String?
  address         String?
  is_verified     Boolean        @default(false)
  trust_score     Int            @default(0)
  tier            TrustTier      @default(UNVERIFIED)
  slug            String?        @unique
  profileImage    String?
  documents       String[]       @default([])
  
  ownerId         String
  owner           User           @relation(fields: [ownerId], references: [id])
  
  receivedVouches Vouch[]
  vouchRequests   VouchRequest[]

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Vouch {
  id                   String   @id @default(uuid())
  timestamp            DateTime @default(now())
  weight               Int      @default(1)
  
  voucher_id           String
  voucher              User     @relation(fields: [voucher_id], references: [id])
  
  receiver_business_id String
  receiver_business    Business @relation(fields: [receiver_business_id], references: [id])

  @@unique([voucher_id, receiver_business_id])
}

enum Role {
  USER
  ADMIN
  COMMUNITY_LEADER
}

model VouchRequest {
  id          String        @id @default(uuid())
  businessId  String
  business    Business      @relation(fields: [businessId], references: [id])
  targetEmail String
  status      RequestStatus @default(PENDING)
  createdAt   DateTime      @default(now())
}

enum RequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}